
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-offset-4">
                <br />
                <img src="../Images/firmalogo.png" class="rounded mx-auto d-block" alt="Firma Logo" style="width: 200px;" />
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form action="../Login/Login" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="kullanicikodu" required placeholder="Kullanıcı">
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="password" class="form-control" name="kullanicisifre" required placeholder="Şifre">
                    </div>
                    <br />


                    <div class="form-group">
                        <button id="GirisBtn" class="btn btn-success btn-block" type="submit">Giriş Yap</button>
                    </div>
                </form>
            </div>
        </div>



        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <br />
                <img src="../Images/descom.png" class="rounded mx-auto d-block" alt="DesCom Logo" style="width: 200px;" />
                <br />
            </div>
        </div>
    </div>

</body>
</html>


